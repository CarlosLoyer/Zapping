<%- include('./partials/header') %>

<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="/images/ostrich_logo_trans.png"
          class="img-fluid" alt="Avestreaming logo">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <h1 style="color: white" class="pb-4">Ingresar</h1>
        <form action="/login" method="POST">

          <!-- Email input -->
          <div class="form-outline mb-4">
            <input type="email" id="username" name="username" class="form-control form-control-lg"
              placeholder="Ej: correo@mail.com" />
            <label class="form-label" for="username" style="color: white">Correo electrónico</label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <input type="password" id="password" name="password" class="form-control form-control-lg"
              placeholder="Contraseña" />
            <label class="form-label" for="password" style="color: white">Contraseña</label>
          </div>
          <div class="text-center text-lg-start mt-4 py-4">
            <button type="submit" class="btn btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem; background-color: #008FAD; color: white">Entrar</button>
            <p class="small fw-bold mt-2 pt-1 mb-0" style="color: white">No tienes una cuenta? <a href="/register"
                class="link-danger">Registrate!</a></p>
          </div>
          <% if (err) { %>
            <p <%- col %>>
              <%- msg %>
            </p>
          <% } %>
        </form>
      </div>
    </div>
  </div>
  <div
    class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5" style="background-color: #008FAD;">
    <!-- Copyright -->
    <div class="text-white mb-3 mb-md-0">
      Avestreaming © 2023. Todos los derechos reservados (la verdad, no).
    </div>
    <!-- Copyright -->
  </div>
</section>

<%- include('./partials/footer') %>
