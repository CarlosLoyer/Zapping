<%- include('./partials/header') %>

<section class="vh-100">
    <div class="container-fluid h-custom">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-9 col-lg-6 col-xl-5">
          <img src="/images/ostrich_logo_trans.png"
            class="img-fluid" alt="Sample image">
        </div>
        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
            <h1 style="color: white" class="pb-4">Registro</h1>
          <form action="/register" method="POST" class="needs-validation" novalidate>
  
            <div class="form-outline mb-4">
                <input type="text" id="regName" name="regName" class="form-control form-control-lg"
                  placeholder="Ej: Fulano de Tal" required />
                <label class="form-label" for="regName" style="color: white">Nombre</label>
            </div>
            <!-- Email input -->
            <div class="form-outline mb-4">
              <input type="email" id="regEmail" name="regEmail" class="form-control form-control-lg"
                placeholder="Ej: correo@mail.com" required/>
              <label class="form-label" for="regEmail" style="color: white">Correo electrónico</label>
            </div>
  
            <!-- Password input -->
            <div class="form-outline mb-3">
              <input type="password" id="regPass" name="regPass" class="form-control form-control-lg"
                placeholder="Contraseña" required/>
              <label class="form-label" for="regPass" style="color: white">Contraseña</label>
            </div>
            <div class="text-center text-lg-start mt-4 pt-2 mb-5">
                <a href="/" class="btn btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem; background-color: #008FAD; color: white">Volver</a>
                <button type="submit" class="btn btn-lg"
                style="padding-left: 2.5rem; padding-right: 2.5rem; background-color: #008FAD; color: white">Registrarse</button>
            </div>
            <% if (err) { %>
              <p <%- col %>>
                <%- msg %>
              </p>
            <% } %>
          </form>
        </div>
      </div>
    </div>
    <div
      class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5" style="background-color: #008FAD;">
      <!-- Copyright -->
      <div class="text-white mb-3 mb-md-0">
        Avestreaming © 2023. Todos los derechos reservados (la verdad, no).
      </div>
      <!-- Copyright -->
    </div>
  </section>  



<%- include('./partials/footer') %>